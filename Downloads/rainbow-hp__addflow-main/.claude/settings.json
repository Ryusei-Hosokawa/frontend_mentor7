{
  "permissions": {
    "allow": [
      "Bash(bun run build)",
      "Bash(bun run test*)",
      "Bash(bun run lint)",
      "Bash(bun run storybook)",
      "Bash(bun run build-storybook)",
      "Bash(git status)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(git push*)",
      "Read(app/**)",
      "Read(docs/**)",
      "Read(public/**)",
      "Read(types/**)",
      "Read(plugins/**)",
      "Read(.storybook/**)",
      "Edit(app/**)",
      "Edit(docs/**)",
      "Edit(types/**)",
      "Edit(plugins/**)",
      "Edit(.storybook/**)",
      "Write(app/**)",
      "Write(docs/**)",
      "Write(types/**)",
      "Write(plugins/**)",
      "Write(.storybook/**)"
    ],
    "deny": [
      "Read(.env*)",
      "Read(*.key)",
      "Read(*.pem)",
      "Read(.ssh/**)",
      "Edit(.env*)",
      "Edit(*.key)",
      "Edit(*.pem)",
      "Edit(.ssh/**)",
      "Write(.env*)",
      "Write(*.key)",
      "Write(*.pem)",
      "Bash(curl*)",
      "Bash(wget*)",
      "Bash(ssh*)",
      "Bash(scp*)",
      "Bash(ftp*)",
      "Bash(rm -rf /*)",
      "Bash(sudo rm*)"
    ]
  },
  "ignorePatterns": [
    "node_modules/**",
    "dist/**",
    "build/**",
    "*.log",
    "*.lock",
    "coverage/**",
    ".next/**",
    ".vscode/**",
    "*.min.js",
    "*.map",
    "storybook-static/**",
    ".bun/**",
    "logs/**",
    ".env*",
    "*.key",
    "*.pem",
    ".ssh/**",
    "tmp/**",
    "temp/**"
  ],
  "projectSettings": {
    "language": "typescript",
    "framework": "react-router-v7",
    "packageManager": "bun",
    "testFramework": "vitest",
    "componentLibrary": "storybook",
    "deployment": "docker"
  }
}