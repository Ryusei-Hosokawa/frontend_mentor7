{
  "name": "Xserver VPS Production",
  "host": "your-xserver-vps-ip",
  "protocol": "sftp",
  "port": 22,
  "username": "your-username",
  "privateKeyPath": "~/.ssh/xserver_vps_key",
  "remotePath": "/var/www/html",
  "uploadOnSave": false,
  "useTempFile": false,
  "openSsh": false,
  "downloadOnOpen": false,
  "ignore": [
    ".vscode/**",
    ".git/**",
    "node_modules/**",
    "dist/**",
    "build/**",
    "*.log",
    "storybook-static/**",
    ".bun/**",
    "logs/**",
    ".env*",
    "*.key",
    "*.pem",
    ".ssh/**",
    "tmp/**",
    "temp/**",
    "coverage/**",
    "*.map",
    "*.min.js"
  ],
  "watcher": {
    "files": "**/*",
    "autoUpload": false,
    "autoDelete": false
  },
  "syncOption": {
    "delete": false,
    "skipCreate": false,
    "ignoreExisting": false,
    "update": true
  }
}