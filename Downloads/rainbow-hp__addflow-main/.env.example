# HP制作テンプレート用環境変数設定
# このファイルを.envにコピーして、実際の値を設定してください

# ========================================
# ローカル開発環境設定
# ========================================

# Vite開発サーバー設定
VITE_APP_NAME="My Company Site"
VITE_APP_PORT=5173
VITE_API_URL=http://localhost:8080/graphql
VITE_DOMAIN=localhost

# Node.js環境
NODE_ENV=development

# ========================================
# CMS連携設定（WordPress GraphQL）
# ========================================

# WordPress GraphQL API
CMS_API_URL=http://localhost:8080/graphql
CMS_AUTH_TOKEN=your_wordpress_auth_token_here

# WordPress データベース（Docker環境用）
MYSQL_DATABASE=wordpress_db
MYSQL_USER=wordpress_user
MYSQL_PASSWORD=secure_password_123
MYSQL_ROOT_PASSWORD=root_password_123

# ========================================
# メール設定（お問い合わせフォーム用）
# ========================================

# SMTP設定
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASS=your_smtp_password_here
SMTP_SECURE=true

# メールアドレス設定
FROM_EMAIL=noreply@your-domain.com
TO_EMAIL=contact@your-domain.com
REPLY_TO_EMAIL=contact@your-domain.com

# ========================================
# VPS接続情報（ローカルテスト用）
# 注意: 本番環境ではGitHub Secretsを使用
# ========================================

# VPS基本情報
VPS_IP=123.456.789.012
VPS_USERNAME=your_vps_username
SSH_PORT=22

# デプロイ設定
DEPLOY_PATH=/var/www/sites/development
APP_PORT=3001
APP_NAME=my-company-site
DOMAIN=dev.your-domain.com
PM2_APP_NAME=dev-app

# ヘルスチェック設定
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=30

# ========================================
# セキュリティ設定
# ========================================

# JWT設定（必要に応じて）
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h

# セッション設定
SESSION_SECRET=your_session_secret_here

# CORS設定
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ========================================
# サードパーティサービス設定
# ========================================

# Google Analytics（オプション）
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X

# Google reCAPTCHA（スパム対策）
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# ソーシャルメディア連携（オプション）
FACEBOOK_APP_ID=your_facebook_app_id
TWITTER_API_KEY=your_twitter_api_key

# ========================================
# ストレージ設定（画像アップロード等）
# ========================================

# ローカルストレージ
UPLOAD_PATH=./public/uploads
MAX_FILE_SIZE=5242880

# AWS S3（オプション）
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-northeast-1
AWS_S3_BUCKET=your-bucket-name

# ========================================
# ログ設定
# ========================================

# ログレベル
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# ========================================
# パフォーマンス設定
# ========================================

# キャッシュ設定
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# レート制限
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# ========================================
# 開発用デバッグ設定
# ========================================

# デバッグモード
DEBUG=true
VERBOSE_LOGGING=true

# Storybook設定
STORYBOOK_PORT=6006

# ========================================
# SSL/TLS設定（本番環境用）
# ========================================

# SSL設定
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# ========================================
# 監視・メトリクス設定
# ========================================

# プロメテウス・メトリクス
METRICS_ENABLED=false
METRICS_PORT=9090

# ヘルスチェック設定
HEALTH_CHECK_ENABLED=true